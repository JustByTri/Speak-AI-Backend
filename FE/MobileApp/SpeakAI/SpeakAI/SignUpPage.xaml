<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeakAI.SignUpPage"
             Title="Sign Up"
             BackgroundColor="#F8F9FA">

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#b3ffab" Offset="0"/>
            <GradientStop Color="#12fff7" Offset="1"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <!-- Header -->
            <Label Text="Sign Up"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="MidnightBlue"/>

            <!-- Input Fields -->
            <VerticalStackLayout Spacing="15">
                <Entry x:Name="Username" 
                       Placeholder="Username" 
                       Text="{Binding Username}"
                       FontSize="14"
                       HeightRequest="50"
                       PlaceholderColor="Gray"
                       BackgroundColor="Transparent"
                       Margin="5,0"/>

                <Entry x:Name="Email"
                       Placeholder="Email"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       FontSize="14"
                       PlaceholderColor="Gray"
                       BackgroundColor="Transparent"
                       HeightRequest="50"
                       Margin="5,0"/>

                <Entry x:Name="FullName"
                       Placeholder="Full Name"
                       Text="{Binding FullName}"
                       FontSize="14"
                       PlaceholderColor="Gray"
                       BackgroundColor="Transparent"
                       HeightRequest="50"
                       Margin="5,0"/>

                <DatePicker x:Name="Birthday"
                            Date="{Binding Birthday}"
                            FontSize="14"
                            BackgroundColor="Transparent"
                            HeightRequest="50"
                            Margin="5,0"/>

                <Picker x:Name="Gender"
                        Title="Select Gender"
                        SelectedItem="{Binding Gender}"
                        FontSize="14"
                        BackgroundColor="Transparent"
                        Margin="5,0">
                    <Picker.Items>
                        <x:String>Male</x:String>
                        <x:String>Female</x:String>
                        <x:String>Other</x:String>
                    </Picker.Items>
                </Picker>

                <Entry x:Name="Password"
                       Placeholder="Password"
                       Text="{Binding Password}"
                       IsPassword="True"
                       FontSize="14"
                       PlaceholderColor="Gray"
                       BackgroundColor="Transparent"
                       HeightRequest="50"
                       Margin="5,0"/>

                <Entry x:Name="ConfirmPassword"
                       Placeholder="Confirm Password"
                       Text="{Binding ConfirmPassword}"
                       IsPassword="True"
                       FontSize="14"
                       PlaceholderColor="Gray"
                       BackgroundColor="Transparent"
                       HeightRequest="50"
                       Margin="5,0"/>
            </VerticalStackLayout>

            <!-- Notification Message -->
            <Label Text="{Binding NotificationMessage}"
                   TextColor="Red"
                   FontSize="16"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsNotificationVisible}"/>

            <!-- Sign Up Button -->
            <Button Text="Sign Up" 
                    FontSize="20"
                    BackgroundColor="#0056b3"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    IsEnabled="{Binding IsNotProcessing}"
                    Command="{Binding SignUpCommand}"/>

            <!-- Sign In Navigation -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Already a member?"
                       TextColor="#555555"
                       FontSize="16"/>
                <Label Text=" Sign In"
                       TextColor="#0056b3"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SignInCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
