<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeakAI.LoginPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Login"
             Background="White">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Explore now" FontSize="28" FontAttributes="Bold"/>
        
        <Button Text="Sign up with Google"
                ImageSource="google_icon.svg"
                BackgroundColor="White"
                BorderColor="Gray"
                BorderWidth="1"
                TextColor="Black"
                CornerRadius="30"
                HeightRequest="50"/>

        <!-- Apple Sign-Up Button -->
        <Button Text="Sign up with Apple"
                ImageSource="apple_icon.svg"
                BackgroundColor="White"
                BorderColor="Gray"
                BorderWidth="1"
                TextColor="Black"
                CornerRadius="30"
                HeightRequest="50"/>

        <!-- OR Separator -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand"/>
            <Label Text="  or  " TextColor="Gray"/>
            <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <!-- Create Account Button -->
        <Button Text="Create account"
                BackgroundColor="Blue"
                TextColor="White"
                CornerRadius="30"
                HeightRequest="50"
                Clicked="OnCreateAccountClicked"/>

        <!-- Sign In -->
        <Label Text="Already have an account?" HorizontalOptions="Center"/>
        <Button Text="Sign in"
                BackgroundColor="White"
                BorderColor="Gray"
                BorderWidth="1"
                TextColor="Blue"
                CornerRadius="30"
                HeightRequest="50"
                Clicked="OnSignInClicked"/>

        <!-- Terms & Privacy -->
        <Label Text="By signing up, you agree to the Terms of Service and Privacy Policy, including Cookie Use."
               FontSize="12"
               TextColor="Gray"
               HorizontalTextAlignment="Center"/>
    </VerticalStackLayout>
</ContentPage>