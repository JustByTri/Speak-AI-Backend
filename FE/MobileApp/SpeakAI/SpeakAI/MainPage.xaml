<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeakAI.MainPage"
             BackgroundColor="#EEF0F7">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="5">
            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="Auto, *" RowSpacing="10" ColumnSpacing="10">
                <Image Source="user_icon.png" WidthRequest="50" HeightRequest="50"
                        Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" />
                <Label Text="Hello, Buddy 👋" FontSize="24" FontAttributes="Bold" 
                        TextColor="Black" VerticalTextAlignment="Center"
                        Grid.Row="0" Grid.Column="1" />
                <Image Source="notification_icon.png" WidthRequest="30" HeightRequest="30"
                        Grid.Row="0" Grid.Column="1" HorizontalOptions="End"/>
                <Frame Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                        Padding="3" CornerRadius="15" BackgroundColor="#F0F0F0"
                        HasShadow="True">
                    <SearchBar 
                        Placeholder="What would you like to learn today?"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        PlaceholderColor="Gray"
                        HorizontalOptions="Fill" />
                </Frame>
            </Grid>
            <Label Text="Continue Learning 📚" FontSize="20" FontAttributes="Bold" TextColor="Black" Margin="10, 25" />
            <HorizontalStackLayout Spacing="15">
                <Frame BackgroundColor="#4A90E2" Padding="15" CornerRadius="15" WidthRequest="160">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Label Text="15/20" FontSize="18" TextColor="White" />
                        <Label Text="For beginner" FontSize="16" TextColor="White" />
                        <Label Text="20 Exercises - Level: A1" FontSize="12" TextColor="White" />
                    </VerticalStackLayout>
                </Frame>
                <Frame BackgroundColor="#F5A623" Padding="15" CornerRadius="15" WidthRequest="160">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Label Text="10/30" FontSize="18" TextColor="White" />
                        <Label Text="For Advanced" FontSize="16" TextColor="White" />
                        <Label Text="30 Exercises - Level: C1" FontSize="12" TextColor="White" />
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>
            <Label Text="Featured Courses" FontSize="20" FontAttributes="Bold" Margin="10, 25" />
            <Frame BackgroundColor="#E8F5E9" Padding="15" CornerRadius="15" Margin="10, 12">
                <HorizontalStackLayout>
                    <Image Source="grammar_icon.png" WidthRequest="50" HeightRequest="50" />
                    <VerticalStackLayout>
                        <Label Text="Grammar Quiz" FontSize="16" />
                        <Label Text="Business English" FontSize="14" TextColor="Gray" />
                        <Label Text="✔ 100 points" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <Frame BackgroundColor="#FFF3E0" Padding="15" CornerRadius="15" Margin="10, 12">
                <HorizontalStackLayout>
                    <Image Source="talk_icon.png" WidthRequest="50" HeightRequest="50" />
                    <VerticalStackLayout>
                        <Label Text="Pronunciation Improvement" FontSize="16" />
                        <Label Text="Improve your pronunciation" 
                               FontSize="12" TextColor="Gray"/>
                        <Label Text="✔ 100 points" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>
            <Frame BackgroundColor="AliceBlue" Padding="15" CornerRadius="15" Margin="10, 12">
                <HorizontalStackLayout>
                    <Image Source="vocab_icon.png" WidthRequest="50" HeightRequest="50" />
                    <VerticalStackLayout>
                        <Label Text="Widen vocabs" FontSize="16" />
                        <Label Text="Learn new words" 
                   FontSize="12" TextColor="Gray"/>
                        <Label Text="✔ 100 points" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
